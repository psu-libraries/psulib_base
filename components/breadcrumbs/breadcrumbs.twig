{#
/**
 * @file
 * Template for a Breadcrumb component.
 *
 * Available config:
 * - breadcrumb_utility_classes: An array of utility classes.
 */
#}
{% set breadcrumb_classes = breadcrumb_utility_classes is iterable ? breadcrumb_utility_classes : [breadcrumb_utility_classes] %}

{% set breadcrumb_attributes = breadcrumb_attributes ?: create_attribute() %}

{% block breadcrumb %}
	{% if breadcrumb %}
		<nav aria-label="breadcrumb">
			<ol {{ breadcrumb_attributes.addClass(breadcrumb_classes).addClass('breadcrumb') }}>
				{% for item in breadcrumb %}
					<li class="breadcrumb-item {{ not item.url ? 'active' }}">
						{% if item.url %}
							<a href="{{ item.url }}">{{ item.text }}</a>
						{% else %}
							{{ item.text }}
						{% endif %}
					</li>
				{% endfor %}
			</ol>
		</nav>
	{% endif %}
{% endblock %}
